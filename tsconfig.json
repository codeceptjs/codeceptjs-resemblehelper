{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "types": ["jest", "node", "mocha"]
  },
  "exclude": [
    "node_modules", "dist", "__test__"
  ],
  "compileOnSave": false
}
